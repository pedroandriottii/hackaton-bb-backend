generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: adicionar hint

model Donation {
  id          String   @id @default(uuid())
  title       String
  totalPoints Int
  user        User     @relation(fields: [userId], references: [id])
  items       Item[]
  location    String
  userId      String
  date        DateTime
}

model Item {
  id          String    @id @default(uuid())
  title       String
  description String
  points      Int
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  Donation    Donation? @relation(fields: [donationId], references: [id])
  donationId  String?
}

enum RoleEnum {
  ADMIN
  USER
}

model User {
  id       String     @id @default(uuid())
  email    String     @unique
  name     String
  password String
  cpf      String
  phone    String
  points   Int        @default(0)
  cep      String?
  role     RoleEnum   @default(USER)
  Donation Donation[]
  Item     Item[]
}
